<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head', {title: 'Metodo 1'}) %>
  <body>
    <%- include('./partials/header', {name: 'Metodo 1 - Congruencial mixto'}) %>
    <main>
      <section class="method-container-form">
        <form action="/method1/" method="post">
          <div class="input-container">
            <div class="wrapper">
              <input
                type="text"
                name="x"
                id="x"
                class="number-input"
                value="<%= locals.oldData && oldData.x ? oldData.x : null%>"
                required
              />
              <label for="x" class="number-label">Semilla (X)</label>
              <% if (locals.errors && errors.x) { %>
              <span class="msg-error"> <li><%= errors.x.msg %></li> </span>
              <% } %>
            </div>
            <div class="wrapper">
              <input
                type="text"
                name="a"
                id="a"
                class="number-input"
                value="<%= locals.oldData && oldData.a ? oldData.a : null%>"
                required
              />
              <label for="a" class="number-label">a</label>
              <% if (locals.errors && errors.a) { %>
              <span class="msg-error"> <li><%= errors.a.msg %></li> </span>
              <% } %>
            </div>

            <div class="wrapper">
              <input
                type="text"
                name="c"
                id="c"
                class="number-input"
                value="<%= locals.oldData && oldData.c ? oldData.c : null%>"
                required
              />
              <label for="c" class="number-label">c</label>
              <% if (locals.errors && errors.c) { %>
              <span class="msg-error"> <li><%= errors.c.msg %></li> </span>
              <% } %>
            </div>
            <div class="wrapper">
              <input
                type="text"
                name="m"
                id="m"
                class="number-input"
                value="<%= locals.oldData && oldData.m ? oldData.m : null%>"
                required
              />
              <label for="m" class="number-label">m</label>
              <% if (locals.errors && errors.m) { %>
              <span class="msg-error"> <li><%= errors.m.msg %></li> </span>
              <% } %>
            </div>
          </div>
          <div class="check-container">
            <label for="valid">Validar numeros</label>
            <input 
              type="checkbox" 
              name="valid" 
              id="valid" 
              <% if (locals.errors) { %>
                checked
              <% } %>
              />
          </div>

          <input type="submit" value="Generar" class="generate" />
        </form>
      </section>
      <% if (!locals.variable) { %>
      <h1 style="background-color: brown">Ingresa valores en los campos</h1>
      <% }else{ %>
      <section class="method-container-table">
        <div class="table-data">
          <table class="table table-striped table-success">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">X<sub>0</sub></th>
                <th scope="col">a</th>
                <th scope="col">c</th>
                <th scope="col">m</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td><%= variable.x%></td>
                <td><%= variable.a%></td>
                <td><%= variable.c%></td>
                <td><%= variable.m%></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="table-number">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">X<sub>n</sub></th>
                <th scope="col">a</th>
                <th scope="col">Intervalo [0,1)</th>
              </tr>
            </thead>
            <tbody>
              <% for (const numero of numeros) { %>
              <tr>
                <th scope="row"><%=numero.id%></th>
                <td><%=numero.x%></td>
                <td><%=numero.a%></td>
                <td><%=numero.i%></td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </section>
      <% } %>
    </main>
  </body>
</html>
